@model RoadForum.Models.Discussion

@{
    ViewData["Title"] = "Discussion Details";
}

<div class="container">
    <div class="card mb-3">
        <div class="row g-0">
            <!-- Left column: Date Created & Icons -->
            <div class="col-md-2 text-center d-flex flex-column justify-content-center align-items-center bg-light p-3">
                <span class="text-muted">@Model.CreateDate.ToString("MMMM dd, yyyy")</span>
            </div>

            <!-- Middle column: Discussion Details -->
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Content</p>
                    <p class="text-muted"><strong>Created On:</strong> @Model.CreateDate.ToString("g")</p>
                </div>
            </div>

            <!-- Right column: Image (If Exists) -->
            <div class="col-md-2 d-flex align-items-center justify-content-center">
                @if (!string.IsNullOrWhiteSpace(Model.ImageFilename))
                {
                    <img src="@Model.ImageFilename" alt="Discussion Image" class="img-fluid rounded" />
                }
            </div>
        </div>
    </div>

    <!-- 🗨️ Comments Section -->
    <!-- Comments Section -->
    @if (Model.Comments != null && Model.Comments.Count > 0)
    {
        <h3>Comments</h3>
        <div class="card">
            <div class="card-body">
                @foreach (var comment in Model.Comments)
                {
                    <div class="mb-3 p-2 border-bottom">
                        <p class="fw-bold">@comment.Content</p>
                        <p class="text-muted">Posted on @comment.CreateDate.ToString("g")</p>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <h3>Comments</h3>
        <p>No comments yet.</p>
    }
    <!-- Add Comment Form -->
    <div class="mt-4">
        <h4>Add a Comment</h4>
        <form asp-controller="Comments" asp-action="Create" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="DiscussionId" value="@Model.DiscussionId" />
                <label for="Content">Comment</label>
                <textarea asp-for="Content" class="form-control" rows="3" placeholder="Write your comment here..."></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>

    <!-- Add Comment Button -->
    <div class="mt-3">
        <a asp-action="Create" asp-controller="Comments" asp-route-discussionId="@Model.DiscussionId" class="btn btn-primary">
            <i class="fas fa-comment"></i> Add Comment
        </a>
    </div>

    <!-- Back to Discussions Button -->
    <div class="text-end p-2">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Discussions</a>
    </div>
</div>
