@model IEnumerable<RoadForum.Models.Discussion>

@{
    ViewData["Title"] = "Discussions";
}

<h1>Discussions</h1>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="card mb-3">
            <div class="row g-0">
                <!-- Left column: DateCreated with icons -->
                <div class="col-md-2 text-center d-flex flex-column justify-content-center align-items-center bg-light p-3">
                    <span class="text-muted">@item.CreateDate.ToString("MMMM dd, yyyy")</span>
                    <div class="mt-2">
                        <!-- Comment Icon -->
                        <i class="fas fa-comment text-primary me-2"></i> <!-- Can be linked to discussion comments if needed -->
                        <!-- View Icon (Links to DiscussionDetails) -->
                        <a asp-action="DiscussionDetails" asp-route-id="@item.DiscussionId" class="text-dark">
                            <i class="fas fa-eye"></i>
                        </a>
                    </div>
                </div>
                <!-- Middle column: Title and Content -->
                <div class="col-md-8">
                    <div class="card-body">
                        <!-- Title -->
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <!-- Description -->
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Content)</p>
                    </div>
                </div>
                <!-- Right column: Image -->
                <div class="col-md-2 d-flex align-items-center justify-content-center">
                    @if (!string.IsNullOrWhiteSpace(item.ImageFilename))
                    {
                        <img src="/photos/@item.ImageFilename" alt="Image" class="thumbnail" />
                    }
                </div>
            </div>
        </div>
    }
</div>
