@model IEnumerable<RoadForum.Models.Discussion>

@{
    ViewData["Title"] = "Discussions";
}

<h1 class="mt-3 mb-4">Discussions</h1>

<div class="container gx-0">
    @foreach (var item in Model)
    {
        <div class="card mb-2">
            <div class="row g-0">


                <!-- Middle column: Title and Content -->
                <div class="col-md-7">
                    <div class="card-body p-0 ps-2 pt-2 align-items-center justify-content-center">
                        <!-- Title with Link -->
                        <h5 class="card-title" style="text-decoration:underline; font-weight: bold">
                            <a asp-action="DiscussionDetails" asp-route-id="@item.DiscussionId" class="text-dark text-decoration-none hover-link">
                                @Html.DisplayFor(modelItem => item.Title)
                            </a>
                        </h5>
              
                        <!-- Description -->
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Content)</p>
                    </div>
                    <!-- DateCreated icons -->
                    <div class="col-md-2 text-center d-flex ps-2 pt-2 mb-2" style="white-space: nowrap; margin-top: -11px">
                        <span class="text-muted">@item.CreateDate.ToString("MMMM dd, yyyy")</span>
                        <div class="ms-3">
                            <a asp-action="DiscussionDetails" asp-route-id="@item.DiscussionId" class="text-dark">
                                <i class="fas fa-comment"></i> @(item.Comments?.Count ?? 0)
                            </a>
                        </div>
                    </div>
                </div>


                <!-- Right column: Image -->
                <div class="col-md-2   d-flex align-items-center justify-content-center">
                    @if (!string.IsNullOrWhiteSpace(item.ImageFilename))
                    {
                        <img src="/photos/@item.ImageFilename" alt="Image" class="thumbnail" />
                    }
                </div>
            </div>
        </div>
    }
</div>
